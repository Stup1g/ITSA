#include <iostream>
using namespace std;

int main() {
    int input, d, h, m, s;

    cin >> input;

    d = input / 86400;
    h = input % 86400 / 3600;
    m = input % 3600 / 60;
    s = input % 60;

    cout << d << " days" << endl;
    cout << h << " hours" << endl;
    cout << m << " minutes" << endl;
    cout << s << " seconds" << endl;

    return 0;
}
